#include<stdio.h>

/* C Program for calculation of simple interest */
/* Author: Dhananjay Date: 31/01/2018 */
main() {
	int principal, rate_of_interest, number_of_years;
	float simple_interest;

	principal = 1000;
	rate_of_interest = 8.5;
	number_of_years = 3;

	/* formula for simple interest */
	simple_interest = principal * number_of_years * rate_of_interest / 100;

	printf("Calculated value of simple_interest = %f", simple_interest);
}
